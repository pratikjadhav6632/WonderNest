<%layout("/layouts/boilerplate")-%>
<body>
    <br><br> 
    <div class="row">
    <div class="col-8 offset-1">
        <h3>Create a New Listing</h3>
    <form action="/listings"method="post">
        <div class="mb-3 ">
            <label for="title"class="form-label">Title</label>
            <input type="text" name="listings[title]" placeholder="cozy luxury" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description"class="form-label">Description</label>
            <textarea name="listings[description]" placeholder="Enter description"class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="image"class="form-label">Image Url/link</label>
            <input type="text" name="listings[image]" placeholder="Enter image URL/link"class="form-control">
        </div>
        <div class="mb-3">
            <label for="price"class="form-label">Price</label>
            <input type="number" name="listings[price]" placeholder="1,200"class="form-control">
        </div>
        <div class="row">
        <div class="mb-3 col-md-6">
            <label for="location"class="form-label">Location</label>
            <input type="text" name="listings[location]" placeholder="Mumbai"class="form-control">
        </div>
        <div class="mb-3 col-md-6">
            <label for="country"class="form-label">Country</label>
            <input type="text" name="listings[country]" placeholder="India"class="form-control">
        </div>
    </div><br>
    <div class="btn-add-div">
        <button class="btn btn-add">Add</button>
    </div>
    </form>
</div>
</div>
<br><br>
</body>
